<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <h2 class="text-center"><%= s_('Login page header|Log in') %></h2>
    <p class="text-center"><%= _("Want to be a Commoner?") %> <%= link_to _("Join us!"), new_registration_path(resource_name) %></p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, s_('Login page button|Log in'), class: 'btn-primary btn-lg btn-block' %>
    <% end %>
    <p class="text-right"><%= link_to s_("Auth Button title|Forgot your password?"), new_password_path(resource_name) %></p>
  </div>
</div>
