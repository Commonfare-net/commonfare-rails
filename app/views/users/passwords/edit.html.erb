<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <h2><%= s_('Change password page header|Change your password') %></h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <%= f.input :password, label: s_("Change password page field|New password"), autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: s_("Change password page field|Confirm your new password") %>
      <%= f.button :submit, s_("Change password page button|Change my password"), class: 'btn-primary btn-block' %>
    <% end %>
  </div>
</div>
