<%= content_for :title, _('Edit credentials') %>
<div class="row justify-content-center">
  <div class="col-lg-7 col-md-9 py-4 bg-white">
    <h2 class="pt-4 pb-2"><%= _('Edit credentials') %></h2>

    <hr class="mb-4">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
        <h4 class="mb-0"><%= _('Change email') %></h4>
        <%= f.input :email, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
    <hr class="mt-5 mb-4">
        <h4 class="mb-0"><%= _('Change password') %></h4>
        <%= f.input :password, autocomplete: "off", hint: s_("Edit credentials form|leave it blank if you don't want to change it"), required: false %>
        <%= f.input :password_confirmation, label: s_('Edit credentials form|Password confirmation'), required: false %>
        <%= f.input :current_password, label: s_('Edit credentials form|Current password'), hint: s_("Edit credentials form|we need your current password to confirm your changes") %>
        <%= render 'shared/back_and_save_buttons', f: f, cancel_path: nil %>
    <% end %>

  </div>
</div>
<div class="row justify-content-center mt-3">
  <div class="col-lg-7 col-md-9 pt-4 pb-2 bg-white">
    <h4 class="mb-3"><%= _('Delete account') %></h4>
    <p>
      <%= link_to _('Leave Commonfare.net...'), goodbye_path, class: 'btn btn-outline-secondary' %>
    </p>
  </div>
</div>
