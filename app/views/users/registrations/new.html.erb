<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <h2 class="text-center"><%= s_('Sign up page header|Become a Commoner') %></h2>
    <p class="text-center"><%= _("Already a Commoner?") %> <%= link_to _("Log in!"), new_user_session_path %></p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, autofocus: true %>
      <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation %>
      <p>
        <small>
          <%= (_("By joining you agree to our %{tos} and %{privacy}.") %{
                tos: link_to(_('Terms of Service'), page_path(id: 'tos')),
                privacy: link_to(_('Privacy Policy'), page_path(id: 'privacy'))
                }
            ).html_safe %>
        </small>
      </p>
      <%= f.button :submit, s_('Sign up page button|Join Commonfare'), class: 'btn btn-success btn-lg btn-block mb-3' %>
    <% end %>
  </div>
</div>
