<div class="discussion-media mt-3 mb-3">
  <div class="row media-body">
    <div class="col col-lg-10">
      <h5 class="mt-2 mb-0"><%= link_to discussion.title, group_discussion_path(discussion.group, discussion) %></h5>
      <small>
        <span class="text-muted"><%= _('%{last_msg_time}, by') %{last_msg_time: last_message_time(discussion.messages.last)} %></span>
        <%= discussion.messages.last.author.name %>
      </small>
    </div>
    <div class="col col-lg-2 comments">
      <p class="text-muted">
        <%= fa_icon('comments-o') %>
        <%= discussion.messages.count %>
        <!-- <%= n_('message', 'messages', discussion.messages.count) %> -->
      </p>
    </div>
  </div>
</div>
