<%= content_for :title, s_('Title|Transaction successful') %>
<div class="row justify-content-center">
  <div class="col-md-8 col-lg-8 py-4 bg-white">
    <h1 class='text-center mb-4'><%= s_('Transaction successful') %></h1>
    <dl class="row">
      <dt class="col-sm-1"><%= _('From') %></dt>
      <dd class="col-sm-11"><%= @transaction.from_wallet.walletable.name %></dd>
      <dt class="col-sm-1"><%= _('To') %></dt>
      <dd class="col-sm-11"><%= @transaction.to_wallet.walletable.name %></dd>
    </dl>
    <p class="text-center">
      <%= _('Close this window before proceeding with a new transaction') %>
    </p>
    <%#= link_to (_('Back to %{currency_name} wallet') %{currency_name: currency_name_for_withdraw_transaction(@transaction)}), get_wallet_path(@transaction.to_wallet), class: 'btn btn-cf btn-block' %>
  </div>
</div>
