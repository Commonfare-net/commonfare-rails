<%= content_for :open_graph_tags do %>
<!-- OpenGraph tags -->
<meta property="og:type" content="website" />
<meta property="og:title" content='<%= @tag.name %> | Commonfare' />
<meta property="og:description" content='<%= _("Stories with tag %{tag_name}") %{tag_name: @tag.name} %>' />
<meta property="og:url" content='<%= request.url %>' />
<!-- Twitter tags -->
<meta name="twitter:card" content="summary" />
<% end %>
<% content_for :title, (_("Stories with tag %{tag_name}") %{tag_name: @tag.name}) %>
<div class="row my-4">
  <div class="col">
    <h3 class="d-inline mr-3"><%= _("Stories with tag") %></h3>
    <p class="cf-tags d-inline">
      <%= link_to @tag.name, tag_path(@tag) %>
    </p>
  </div>
</div>
<% @story_types_and_lists.each do |story_type, story_list| %>
  <% if story_list.any? %>
    <div class="row story-type-header">
      <div class="col">
        <h2><%= story_type_title(story_type) %></h2>
      </div>
    </div>
    <div class="row">
    <% if story_type == :welfare_provision %>
      <div class="col">
        <% story_list.each do |story| %>
          <%= render 'stories/wp_row', story: story %>
        <% end %>
      </div>
    <% else %>
      <% story_list.each do |story| %>
        <div class="col-lg-4 col-md-6">
          <%= render 'stories/card', story: story %>
        </div>
      <% end %>
    <% end %>
    </div>
  <% end %>
<% end %>
