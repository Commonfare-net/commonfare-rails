<div class="row text-center">
  <div class="col-sm-6">
    <%= image_tag "http://placebear.com/100/100", class: 'rounded-circle' %>
  </div>
  <div class="col-sm-6">
    <p class='lead'>
      <%= @commoner.name %>
      <small>(<%= link_to 'Edit', edit_commoner_path(@commoner) if can? :edit, @commoner %>)</small>
    </p>
    <%= link_to _("Share a Story"), new_commoner_story_path(@commoner), class: 'btn btn-success' %>
    <%= link_to _("My Stories"), commoner_stories_path(@commoner), class: 'btn btn-info' %>
  </div>
</div>
<hr>
<h2 class="text-center">Latest Stories</h2>
<div class="row">
<% Story.last(10).each do |story| %>
  <div class="col-lg-4 col-md-6">
    <%= render 'stories/card', story: story %>
  </div>
<% end %>
</div>
