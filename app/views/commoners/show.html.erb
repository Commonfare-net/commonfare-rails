<% content_for :title, @commoner.name %>
<div class="row text-center">
  <div class="col-sm-6">
    <%= image_tag @commoner.avatar.profile, class: 'rounded-circle' %>
  </div>
  <div class="col-sm-6">
    <p class='lead'>
      <%= @commoner.name %>
      <small><%= link_to '(Edit profile)', edit_commoner_path(@commoner) if can? :edit, @commoner %></small>
    </p>
    <%= link_to((_("%{commoner_name}'s Stories") %{commoner_name: @commoner.name}), commoner_stories_path(@commoner), class: 'btn btn-info') %>
  </div>
</div>
<hr>
<h2 class="text-center">Latest Stories</h2>
<div class="row">
<% Story.order('created_at DESC').first(6).each do |story| %>
  <div class="col-lg-4 col-md-6">
    <%= render 'stories/card', story: story %>
  </div>
<% end %>
</div>
