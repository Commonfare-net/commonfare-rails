<% content_for :title, s_('Title|Edit group') %>
<div class="row justify-content-center">
  <div class="col-lg-7 col-md-9 py-4 bg-white">
    <h2 class="pt-4 pb-2"><%= s_('Title|Edit group') %></h2>
    <%= simple_form_for(@group) do |f| %>
      <%= f.error_notification %>
      <%= render 'fields', f: f %>
      <%= render 'shared/back_and_save_buttons', f: f, cancel_path: group_path(@group) %>
    <% end %>
  </div>
</div>
