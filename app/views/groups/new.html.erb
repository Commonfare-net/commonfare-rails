<% content_for :title, s_('Title|Create group') %>
<div class="row justify-content-center">
  <div class="col-lg-7 col-md-9 bg-white py-4">
    <h2 class="pt-4 pb-2"><%= s_('Title|Create group') %></h2>
    <%= simple_form_for(@group) do |f| %>
      <%= f.error_notification %>
      <%= render 'fields', f: f %>
      <%= f.button :submit, new_group_btn_text, class: 'btn btn-cf btn-block' %>
    <% end %>
  </div>
</div>
