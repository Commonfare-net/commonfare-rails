<% content_for :title, (_("Results for %{search_term}") %{search_term: @q}) %>
<h2><%= (_("Results for '%{search_term}'") %{search_term: @q}) %></h2>
<% if @tags.any? %>
<div class="row">
  <div class="col">
    <p class="story-tags">
      Tags:
      <% @tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag), class: 'btn btn-sm btn-light' %>
      <% end %>
    </p>
  </div>
</div>
<% end %>
<% if @stories.any? %>
  <div class="row">
    <%= render @stories %>
  </div>
<% end %>
