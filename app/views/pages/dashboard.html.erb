<%= content_for :title, s_('Title|Metrics dashboard') %>
<% if @no_file == true %>
<div class="alert alert-danger text-center mt-2" role="alert">
 <h4 class="alert-heading">No data file!</h4>
</div>
<% else %>
<div class="dashboard-responsive">
  <header class="header">
    <div class="row wrap">
      <div class="col">
        <h1><%= s_('Title|Metrics dashboard') %></h1>
      </div>
      <div class="col-sm-auto date-filter">
        <label for="start-date"><%= s_('Dashboard|Start date') %></label>
        <!-- <input type="date" name="start-date" id="start-date" /> -->
        <!-- COLLEGARE DATA AI GRAFICI -->
        <%= I18n.l(@week_of.to_datetime.beginning_of_week, format: :message_time) %>
      </div>
      <div class="col-sm-auto date-filter">
        <label for="end-date"><%= s_('Dashboard|End date') %></label>
        <!-- <input type="date" name="end-date" id="end-date" /> -->
        <!-- COLLEGARE DATA AI GRAFICI -->
        <%= I18n.l(@week_of.to_datetime.end_of_week, format: :message_time) %>
      </div>
    </div>
  </header>
  <div class="content">
    <h2 class="mt-4"><%= s_('Dashboard|Visits overview') %></h2>
    <div class="row">
    <% @visits_overview.each do |title, value| %>
      <div class="col-sm-3">
        <div class="block block-bg-green">
          <h3><%= title %></h3>
          <p class="number"><%= value %></p>
        </div>
      </div>
    <% end %>
    </div>

    <h2 class="mt-5"><%= s_('Dashboard|Visits over time') %></h2>
    <div class="row">
      <div class="col text-center">
        <div class="block mb-5">
          <%= image_tag piwik_image_url(@week_of.to_datetime.beginning_of_week.strftime('%F'), @week_of.to_datetime.end_of_week.strftime('%F')), alt: s_('Dashboard|Visits over time'), class: 'img-fluid' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <h2><%= s_('Dashboard|Site search (last month)') %></h2>
        <table class="table table-hover">
          <thead class="thead-light">
            <tr>
              <th scope="col">#</th>
              <th scope="col"><%= s_('Dashboard site search|Keyword') %></th>
              <th scope="col"><%= s_('Dashboard site search|Visits') %></th>
            </tr>
          </thead>
          <tbody>
          <% @site_searches.each_with_index do |s, i| %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= s['label'] %></td>
              <td><%= s['nb_visits'] %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-lg-6">
        <h2><%= s_('Dashboard|Social graph') %></h2>
        <div class="block">
          <!-- INSERIRE GRAFICO STATICO -->
          <div class="graph">
            <h2 class="text-center pt-4">Coming soon</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
