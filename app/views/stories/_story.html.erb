<div class="story-media mb-3">
  <%= link_to story do %>
    <%= image_tag 'http://via.placeholder.com/48x48', class: 'rounded-circle mr-3' %>
  <% end %>
  <div class="media-body">
    <h5 class="mt-2"><%= link_to truncate(story.title, length: 84), story, class: 'story-media-title-link' %></h5>
    <small class="text-muted">
      <%= l(story.created_at.to_date, format: :short) %>
      <%= link_to story.author.name, story.author %>
    </small>
  </div>
</div>
