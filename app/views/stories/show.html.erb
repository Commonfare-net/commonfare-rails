<% Globalize.with_locale(@story_locale) do %>
  <div>
    <%= _("You are reading this Story in") %>
    <div class="dropdown d-inline">
      <button href="#" id="dropdownMenuButton" type="button" class="btn btn-link btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= localised_language_name(I18n.locale, @story_locale) %>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <% other_locales(@story_locale).each do |locale| %>
          <%= link_to "#{localised_language_name(I18n.locale, locale)}", { story_locale: locale }, class: 'dropdown-item' %>
        <% end %>
      </div>
    </div>
  </div>

<p>
  <strong>Title:</strong>
  <%= @story.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @story.content.html_safe %>
</p>

<p>
  <strong>Place:</strong>
  <%= @story.place %>
</p>

<%= link_to 'Edit', edit_story_path(@story, story_locale: @story_locale) %> |
<% end %>
