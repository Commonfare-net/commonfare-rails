<%= f.error_notification %>
<%# binding.pry %>
<%= f.input :title,
            label: _('Give a nice title to your Story'),
            required: false,
            placeholder: _('e.g. There and back again') %>
<%= f.input :content,
            label: _('Write here your Story'),
            as: :trix_editor,
            required: false,
            hint: _("Please don't be too concise (min. 500 chars)") %>
<%= f.input :place,
            label: _('Where is this story set?'),
            required: false,
            placeholder: _('e.g. Milan, Italy'),
            hint: _('The city, region or country of your story') %>
<%= f.association :tags,
            label: _('Some words useful to tag your story'),
            # placeholder: "Managed in JS",
            hint: _('Press Enter to separate the tags') %>
<%= f.button :submit, s_('Story form button|Share your Story'), class: 'btn btn-success btn-block' %>

<%= content_for :scripts do %>
  <script type="text/javascript">
    $('#story_tag_ids').select2({
      theme: 'bootstrap',
      placeholder: "<%= _('e.g. Pregnancy, Food sharing, etc.') %>",
      minimumResultsForSearch: -1,
      tags: true
    });
    $('#story_tag_ids').on('select2:select', function (e) {
      var data = e.params.data;
      console.log(data);
    });
  </script>
<% end %>
