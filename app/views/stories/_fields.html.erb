<%= f.error_notification %>
<%# binding.pry %>
<%= f.input :title,
            required: false,
            placeholder: _('What is the title of your story?') %>
<%= f.input :content,
            as: :trix_editor,
            required: false,
            hint: _("Please don't be too concise (min. 500 chars)") %>
<%= f.input :place, required: false, placeholder: _('e.g. Milan, Italy'), hint: _('The city, region or country of your story') %>
<%= f.button :submit, s_('Story form button|Share your Story'), class: 'btn btn-success btn-block' %>
